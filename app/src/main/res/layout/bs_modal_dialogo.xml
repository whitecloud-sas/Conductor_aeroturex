<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/modalBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorBgSheets">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/dialogo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:gravity="start|top"
            android:text="Servicio Cancelado"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/disabled_color"
            app:layout_constraintBottom_toTopOf="@+id/dialogo_modal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_below="@+id/dialogo_title"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/dialogo_modal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dialogo_title"
            android:layout_marginTop="19dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:gravity="start|top"
            android:text="Servicio Cancelado"
            android:textSize="16sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/dialogo_modal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialogo_modal"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@+id/imageView8"
            android:gravity="start|top"
            android:text="Motivo"
            android:textSize="16sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dialogo_modal"
            android:layout_below="@+id/dialogo_modal"
            app:srcCompat="@drawable/close_circle" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_actions_dialogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="Aceptar"
                android:textColor="@color/icons"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:theme="@style/bsButton" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
