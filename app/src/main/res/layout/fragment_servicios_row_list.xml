<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    app:dragEdge="right"
    android:background="@color/cast_expanded_controller_ad_container_white_stripe_color"
    app:mode="same_level">

    <FrameLayout
        android:id="@+id/delete_layout"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="#ffcc0000">

        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:text="Eliminar"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="DirecciÃ³n"
            android:layout_marginRight="00dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/primary_text"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/id_imfss" />

        <TextView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:textSize="15sp"
            android:paddingTop="2dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="5dp"
            android:text="Info Adicional"
            android:textColor="@color/primary_dark"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/id_imfss" />

        <ImageView
            android:id="@+id/id_imfss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:src="@mipmap/ic_launcher"
            android:gravity="center|center_vertical|center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</com.chauthai.swipereveallayout.SwipeRevealLayout>